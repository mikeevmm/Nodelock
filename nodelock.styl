maroon = #6A2140
light-red = #CA5765
pink = #CF256D
pink-palette = #ee204d
orange = #E8846B

poiret = 'Poiret One'
pt = 'PT Sans'

//Mixins
background(url, size, position)
  background-image url(url)
  @media only screen and (max-width : 992px)
    background-image url("lowq/"+url)
  background-size size
  background-position position

//Styling
*
  padding 0
  margin 0

body
  background-color ultra-black

.text-blue
  color blue
.text-red
  color red

.poiret
  font-family poiret, sans-serif

//collapsible
.collapsible
  background-color real-white

//404
.notfound
  height 100vh
  padding 1vh 1vw
  color white
  background '404Image.png' cover center center

//Sign out
.logout-buttons-container
  background-color transparent
  border-radius 5px
  position absolute
  bottom 2vh
  right 2vw
  z-index 10
  font-family poiret, 'sans-serif'
  .btn
    background-color black
    color white

//Go to dashboard button
.goto-dashboard-btn
  absolute top 1vh left 0.8vw
  opacity 0.9

//Front page
.front-page
  height 100vh
  background 'nodelock-city.png' cover center bottom
  .valign-wrapper
    height 100%
  .login-buttons-container
    relative top 15%
    background-color black
    color white
    text-align center
    margin 0 auto
    min-width 60%
    border-radius 10px
    .row
      padding 3px 10px
    .btn
      color white
      background-color dark-grey
  .toggle-login-button
    position absolute
    left 1vw
    top 1vh
    .btn
      background-color dark-grey
      color white

