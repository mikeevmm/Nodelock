@media only screen and (max-width : 992px)
  .next-to-sidebar
    padding-left 0

//Dashboard
.dashboard
  background'nodelock-graffiti.png' cover center center
  height 100vh
  padding-top 10%
  .main-content
    .card-panel
      opacity 0.95
      border-radius 5px
      background-color black
      padding-bottom 15px
      width 100%
    text-align center
    font-family poiret, sans-serif
    color white
    row
      padding-bottom 20px
    h1
      font-size 13vmin
    h3
      font-size 5vmin
      text-decoration underline
    .buttons
      font-size 8vmin
      text-decoration none
      transition all .2s ease
      a,a:visited,a:hover
        text-decoration none
        color bright-blue
    .material-icons
      font-size 8vmin

//Create game
.create-game
  padding-top 5vh
  height 100vh
  background 'nodelock-alley.png' cover right bottom
  .collapsible li
    .collapsible-header
      font-family pt, sans-serif
      font-weight bold
    .collapsible-body
      padding 10px
      max-height 60vh
      overflow auto
      .participants-list
        max-height 20vh
        overflow auto
  #map
    @media only screen and (max-width : 992px)
      max-height 30vh
    height 40vh
    min-height 180px
    width inherit

//Join game
.join-game
  padding-top 5vh
  height 100vh
  background 'nodelock-galery.png' cover center center
  .invitation-list
    font-family poiret, 'sans-serif'
    padding 4vh 3vw
    border-radius 10px;
    background-color black
    opacity 0.95
    color white
  .join
    margin-left 3px
    margin-right 3px

//Game dashboard (if unready)
.game-dashboard-unready
  height 100vh
  background 'nodelock-wait-image.png' cover center center
  padding-top 10vh
  .wait-message
    border-radius 10px
    background-color black
    padding-bottom 15px
    width 100%
    color white
    text-align center
    font-family poiret, sans-serif

//Game dashboard (in game)
.game-dashboard
  #map
    z-index: -1
    width 100vw
    height 100vh
  .UI
    z-index: 0
  .action-buttons
    position fixed
    bottom 2vh
    left 2vw
  .btn-floating
    &.blue
      background-color bright-blue
  .info-button
    position fixed
    bottom 2vh
    left 48vw
  .active-perk
    position fixed
    top 2vh
    right 2vw
    i
      color black
  .cancel-game
    position absolute
    top 1vh
    left 45vw
    opacity 0.8
    background-color black
    color white

//Game Dashboard (end game)
.end-game-text
  .red-text
    color red
  .blue-text
    color blue
  position absolute
  width 80vw
  left 10vw
  top 15vh
  opacity 0.9
  border-radius 10px
  background-color black
  padding-bottom 15px
  color white
  text-align center
  font-family poiret, sans-serif
